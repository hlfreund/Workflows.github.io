journal = {RNA Biology},
keywords = {16S gene,5-way junction,V3 pattern,V3 size different,bacterial rRNA,helix 17,k-mers},
number = {11},
pages = {1514--1521},
pmid = {28440695},
title = {{Size-variable zone in V3 region of 16S rRNA}},
