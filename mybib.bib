isbn = {1111111111},
issn = {19326203},
journal = {PLoS ONE},
number = {10},
pages = {1--17},
pmid = {30359454},
title = {{Evaluation of the ribosomal DNA internal transcribed spacer (ITS), specifically ITS1 and ITS2, for the analysis of fungal diversity by deep sequencing}},
volume = {13},
